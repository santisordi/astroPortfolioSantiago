---
 interface Porps {
    title: string
    description: string
    link: string
    date: string
}

const { title, description, link, date } = Astro.props
---


<h3 class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white">{description}<span class="bg-blue-100 text-blue-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 ms-3">Latest</span></h3>
<time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">Released {date}</time>
<p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">{description}</p>
